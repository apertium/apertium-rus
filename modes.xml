<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="rus-morph">
    <pipeline>
      <program name="lt-proc -w">
        <file name="rus.automorf.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="rus-gener">
    <pipeline>
      <program name="lt-proc -g">
        <file name="rus.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="rus-tagger">
    <pipeline>
      <program name="lt-proc -w">
        <file name="rus.automorf.bin"/>
      </program>
      <program name="cg-proc -w">
        <file name="rus.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="rus-disam">
    <pipeline>
      <program name="lt-proc -w">
        <file name="rus.automorf.bin"/>
      </program>
      <program name="cg-proc -w">
        <file name="rus.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="rus-disam-debug">
    <pipeline>
      <program name="lt-proc -w">
        <file name="rus.automorf.bin"/>
      </program>
      <program name="cg-conv -a -l" />
      <program name="vislcg3 --trace -g">
        <file name="apertium-rus.rus.rlx"/>
      </program>
    </pipeline>
  </mode>

</modes>
